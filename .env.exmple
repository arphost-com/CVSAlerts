###############################################################################
# BotPEASS / CVSAlerts - Environment Example
# Copy to .env and fill in only what you use.
###############################################################################

###############################################################################
# Optional: Vulners (currently not used unless exploit search is enabled)
###############################################################################
VULNERS_API_KEY=

###############################################################################
# Slack
###############################################################################
SLACK_WEBHOOK=

###############################################################################
# Telegram
###############################################################################
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

###############################################################################
# Discord
###############################################################################
DISCORD_WEBHOOK_URL=

###############################################################################
# Pushover
###############################################################################
PUSHOVER_DEVICE_NAME=
PUSHOVER_USER_KEY=
PUSHOVER_TOKEN=

###############################################################################
# ntfy
###############################################################################
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=botpeass
# Optional (example formats: "Bearer <token>" or "Basic <base64>")
NTFY_AUTH=

###############################################################################
# Email Digest (ONE email per run)
# Enable by setting EMAIL_PROVIDER to "smtp" or "sendgrid"
###############################################################################
# EMAIL_PROVIDER=smtp
# EMAIL_PROVIDER=sendgrid
EMAIL_PROVIDER=

# Required when EMAIL_PROVIDER is set
EMAIL_FROM=
EMAIL_TO=   # comma-separated list, e.g. you@example.com,ops@example.com

# Optional
EMAIL_SUBJECT=CVSAlerts Digest
EMAIL_SEND_ON_EMPTY=false

###############################################################################
# SMTP Settings (only if EMAIL_PROVIDER=smtp)
###############################################################################
SMTP_HOST=
SMTP_PORT=587
SMTP_TLS=true
SMTP_USER=
SMTP_PASS=

###############################################################################
# SendGrid Settings (only if EMAIL_PROVIDER=sendgrid)
###############################################################################
SENDGRID_API_KEY=

